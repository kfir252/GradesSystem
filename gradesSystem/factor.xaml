<Window x:Class="gradesSystem.factor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gradesSystem"
        mc:Ignorable="d"
        Title="factor" Height="300" Width="255" ResizeMode="NoResize">
    <Grid>
        <ListBox Name="assignmentsList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="30,27,0,0" Height="170" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
        <TextBox Name="bonusPointsTextBox" Margin="30,202,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="130" Height="30" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Button Content="Add" Margin="165,202,0,0" RenderTransformOrigin="0.625,0.002" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="45" Click="addFactor" />
        <Label Content="choose assignment write the amount" HorizontalAlignment="Left" Margin="27,-5,0,0" VerticalAlignment="Top" Width="228" FontWeight="Bold" FontSize="10"/>
    </Grid>
</Window>
